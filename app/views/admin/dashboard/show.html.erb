<h1>Admin Dashboard</h1>
<h3>Tutorials</h3>

<div class="p2">
  <%= link_to "New Tutorial", new_admin_tutorial_path, class: "video-position-submit btn btn-outline" %>
</div>

<table class="col col-5">
  <tr>
    <th>Title</th>
    <th>Actions</th>
  </tr>
  <% @facade.tutorials.each do |tutorial| %>
    <tr class="admin-tutorial-card">
      <td><%= link_to tutorial.title, tutorial_path(tutorial) %></td>
      <td>
        <div class='buttons-wrapper-div'>
          <%= link_to "Edit", edit_admin_tutorial_path(tutorial), class: "edit-link" %> |
          <%= button_to 'Destroy', admin_tutorial_path(tutorial),
                                 method: :delete,
                                 data: { confirm: 'Are you sure?' },
                                 class: 'del-btn' %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
