<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1\>
  </section>

  <section>

    <h1>Github</h1>
    <%= button_to "Connect to Github", github_login_path, method: :get %>

    <h3>Repos</h3>

    <% repos_facade.repos.each do |repo| %>
    <ul>
  <li><%= link_to "#{repo.name}", repo.url %></li>

  </ul>
    <% end %>

    <h3>Followers</h3>
    <% followers_facade.followers.each do |follower| %>
      <ul>
    <li> <%=link_to "#{follower.login}", follower.url  %> </li>
  </ul>
    <% end %>


    <h3>Following</h3>
    <% following_facade.following.each do |user| %>
      <ul>
  <li> <%=link_to "#{user.login}", user.url  %> </li>
  </ul>
    <% end %>

  </section>

</section>
